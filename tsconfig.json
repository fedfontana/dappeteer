{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2021", "dom"],
    "typeRoots": ["./node_modules/@types", "./types"],
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "removeComments": false
  },
  "include": ["src/**/*", "test/**/*"]
}
